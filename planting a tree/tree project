public class Tree {

  public static void main(String[] args) {
    // Introduce the author
    System.out.println("Hey there, I’m Ariel and I’m learning to code in Java!");
    System.out.println("I’m going to plant a tree today!\n");

    // Print a simple tree using ASCII art
    System.out.println("   *   ");
    System.out.println("  ***  ");
    System.out.println(" ***** ");
    System.out.println("   *   ");
    System.out.println("   *   ");

    // Print the ground
    System.out.println("~~~~~~~");
  }

}
